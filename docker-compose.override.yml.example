# docker-compose.override.yml.example
# Copier ce fichier vers docker-compose.override.yml pour activer les personnalisations
# Le fichier override est automatiquement lu par docker compose

version: '3.8'

services:
  ollama:
    # Activer le support GPU NVIDIA
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]

    # Limites de ressources personnalis√©es

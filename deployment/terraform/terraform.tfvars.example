# UpCloud LLM Provider - Terraform Variables
# Copy this file to terraform.tfvars and customize

# Basic Configuration
server_hostname = "llm-provider-01"
zone           = "de-fra1" # Frankfurt
# Available zones: de-fra1, nl-ams1, uk-lon1, us-nyc1, us-chi1, us-sjo1, sg-sin1, etc.

# Server Size
# Recommended for gpt-oss:120b: 16xCPU-64GB or higher
server_plan  = "16xCPU-64GB"
storage_size = 250 # GB

# SSH Access
# ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-email@example.com"
# Or set via environment: export TF_VAR_ssh_public_key="$(cat ~/.ssh/id_rsa.pub)"

# Network Security
# Restrict SSH access to specific IPs (recommended for production)
# allowed_ssh_ips = ["1.2.3.4/32"]

# Restrict API access to specific IPs (recommended for production)
# allowed_api_ips = ["1.2.3.4/32", "5.6.7.8/32"]

# Environment
environment = "production"

# Backups
enable_backups         = true
backup_retention_days  = 7

# Monitoring
enable_monitoring = true

# Tags
tags = {
  project     = "llm-provider"
  cost_center = "ai-infrastructure"
  managed_by  = "terraform"
}
